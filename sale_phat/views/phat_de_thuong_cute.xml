<odoo>
    <data>
        <!-- Form View cho Sinh Vien -->
        <record id="sinh_vien_view_form" model="ir.ui.view">
            <field name="name">sinh.vien.form</field>
            <field name="model">sinh.vien</field>
            <field name="arch" type="xml">
                <form string="Sinh Vien Form">
                    <sheet>
                        <div class="custom_header">
                            <img src="/phat_sale/static/description/ahu.png" alt="Header Logo"/>
                        </div>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="lop"/>
                                <field name="gender"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="day_of_birth"/>
                                <field name="height"/>
                                <field name="weight"/>
                            </group>
                            <!-- Thêm trường stage_id -->
                        </group>
                        <group>
                            <field name="stage_id"/>
                        </group>

                        <notebook>
                            <page string="Bang Diem">
                                <field name="subjects">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="grade"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="custom_footer">
                        <img src="/phat_sale/static/description/ahu.png" alt="Footer Logo"/>
                        Sinh Vien Form Footer
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View cho Sinh Vien -->
        <record id="sinh_vien_view_tree" model="ir.ui.view">
            <field name="name">sinh.vien.tree</field>
            <field name="model">sinh.vien</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="lop"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="height"/>
                    <field name="weight"/>
                    <!-- Nếu cần hiển thị stage_id trong danh sách -->
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>

        <!-- Action cho Sinh Vien -->
        <record id="sinh_vien_view_action" model="ir.actions.act_window">
            <field name="name">Sinh Vien</field>
            <field name="res_model">sinh.vien</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu cho Sinh Vien -->
        <menuitem id="sinh_vien_menu" name="Sinh Vien" web_icon="sale_phat,static/description/icon.png" sequence="1"/>
        <menuitem id="sinh_vien_sub_menu" parent="sinh_vien_menu" action="sinh_vien_view_action" name="Sinh Vien"/>
    </data>
</odoo>