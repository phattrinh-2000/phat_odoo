<odoo>
    <data>
        <record id="sinh_vien_stage_view_form" model="ir.ui.view">
            <field name="name">sinh.vien.stage.form</field>
            <field name="model">sinh.vien.stage</field>
            <field name="arch" type="xml">
                <form string="Sinh Vien Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="fold"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sinh_vien_stage_view_tree" model="ir.ui.view">
            <field name="name">sinh.vien.stage.tree</field>
            <field name="model">sinh.vien.stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="fold"/>
                </tree>
            </field>
        </record>

        <record id="sinh_vien_stage_view_action" model="ir.actions.act_window">
            <field name="name">Sinh Vien Stage</field>
            <field name="res_model">sinh.vien.stage</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sinh_vien_stage_menu" parent="sinh_vien_sub_menu" action="sinh_vien_stage_view_action" name="Sinh Vien Stage"/>
    </data>
</odoo>